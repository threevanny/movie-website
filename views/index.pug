extends layout

block content
  .container
    .row
      .col-md-12
        h1.pt-2.pb-2 Movie List
    .row
      for movie in movies
        .col-4.col-sm-2
          .card.border-0
            a(href=`/movie/${movie._id}`)
              img.img-fluid.hover-img(src=`${movie.poster}`, alt="", srcset="")
          p.text-center
            small= movie.title